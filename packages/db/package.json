{
  "name": "@elkdonis/db",
  "version": "1.0.0",
  "description": "Shared database package with Prisma for Elkdonis monorepo",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --project tsconfig.json && prisma generate",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "seed": "ts-node --esm src/seed.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "files": [
    "dist/**",
    "prisma/**"
  ],
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "prisma": "^6.16.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
