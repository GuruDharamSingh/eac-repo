{
  "name": "@elkdonis/ui",
  "version": "1.0.0",
  "description": "Shared UI components using Mantine",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist/**"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@elkdonis/types": "workspace:*",
    "@elkdonis/hooks": "workspace:*",
    "@elkdonis/utils": "workspace:*",
    "@mantine/core": "^8.3.2",
    "@mantine/dates": "^8.3.2",
    "@mantine/dropzone": "^8.3.2",
    "@mantine/form": "^8.3.5",
    "@mantine/hooks": "^8.3.2",
    "@mantine/tiptap": "^8.3.2",
    "@tabler/icons-react": "^3.0.0",
    "@tiptap/react": "^2.8.0",
    "@tiptap/starter-kit": "^2.8.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.544.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}