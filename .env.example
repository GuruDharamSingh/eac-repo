# Copy this file to `.env` and update the values for your environment.
# This keeps sensitive secrets out of version control while giving Docker
# everything it needs to run the local stack.

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
POSTGRES_DB=elkdonis_dev

# Supabase / GoTrue
SUPABASE_URL=http://localhost:9999
SUPABASE_ANON_KEY=replace-with-anon-key
SUPABASE_SERVICE_KEY=replace-with-service-key
JWT_SECRET=replace-with-long-random-string
REALTIME_SECRET=replace-with-longer-random-string
SITE_URL=http://localhost:3000

# Nextcloud
NEXTCLOUD_URL=http://nextcloud-nginx:80
NEXTCLOUD_ADMIN_USER=elkdonis
NEXTCLOUD_ADMIN_PASSWORD=change-me
NEXT_PUBLIC_NEXTCLOUD_URL=http://localhost:8080
NEXTCLOUD_WEBHOOK_SECRET=replace-with-random-secret

# SMTP (update if you plan to send email locally)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@example.com
EMAIL_CLIENT=smtp

# Optional: Supabase database password referenced by helper scripts
SUPABASE_DB_PASSWORD=supabase_dev_password
